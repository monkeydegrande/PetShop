<Window x:Class="AniMall.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AniMall"
        mc:Ignorable="d"
        Title="AniMall Login"  WindowStartupLocation="CenterScreen" MinWidth="305" Width="305" MinHeight="200"  Height="200" MaxHeight="200" MaxWidth="305">
    <Grid Background="#FFEEEEEE">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="110" Grid.ColumnSpan="2" >
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,2">
                <Label  Content="User Name:" HorizontalContentAlignment="Right" Height="30" Width="90" FontFamily="Century Gothic" FontSize="14"/>
                <TextBox x:Name="userName" Width="120" Height="30" FontFamily="Century Gothic"  VerticalContentAlignment="Center" TabIndex="0" ToolTip="Enter Username"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,2">
                <Label Content="Password:" Height="30" Width="90" HorizontalContentAlignment="Right" FontFamily="Century Gothic" FontSize="14"/>
                <PasswordBox x:Name="pwBox" Width="120" Height="30" FontFamily="Century Gothic" VerticalContentAlignment="Center" TabIndex="1" ToolTip="Enter your password"/>
            </StackPanel>

            <DockPanel HorizontalAlignment="Center" Width="190" Margin="0,10">
                <Button x:Name="loginButton" DockPanel.Dock="Left" Content="Login" Width="90" Click="loginButton_Click" Background="White" FontFamily="Century Gothic" Height="25" TabIndex="2" ToolTip="Click here to login"/>
                <Button x:Name="createUserButton" DockPanel.Dock="Right" Content="Create User" Width="90"  Click="createUserButton_Click" HorizontalAlignment="Right" Background="White" FontFamily="Century Gothic" Height="25" TabIndex="3" ToolTip="New users, click here to create an account"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
