<Window x:Class="AniMall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AniMall"
        mc:Ignorable="d"
        Title="Welcome to AniMall!" Height="467" Width="800">
    <Grid>
        <local:LoginControl x:Name="Login"/>
        <local:SellerControl x:Name="Seller" Visibility="Hidden"/>
        <local:BuyerControl x:Name="Buyer"  Visibility="Hidden"/>
        <local:CreateControl x:Name="Create"  Visibility="Hidden"/>
    </Grid>

</Window>
