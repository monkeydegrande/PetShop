<UserControl x:Class="AniMall.SellerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AniMall"
             Background="White"
             Height="475" Width="800">

    <UserControl.Resources>
        <DataTemplate x:Key="ProductTemplate">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ImagePath}" Margin="5" Width="75" Height="75"/>
                <StackPanel>
                    <TextBlock Text="{Binding Name}" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Description}" Width="200" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding Price, StringFormat=Window height: {0:C}}" Width="200" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding Stock, StringFormat=In Stock: {0:#}}" Width="200" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <ListBox x:Name="AnimalListBox" ItemsSource="{Binding Animals}" 
             SelectedItem="{Binding SelectedAnimal}" Background="AliceBlue"
             ItemTemplate="{StaticResource ProductTemplate}" />
</UserControl>

