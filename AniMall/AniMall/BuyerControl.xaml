<UserControl x:Class="AniMall.BuyerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AniMall"
             Background="White"
             Height="475" Width="800">


    <ListBox x:Name="AnimalListBox" ItemsSource="{Binding Animals}" 
             SelectedItem="{Binding SelectedAnimal}" Background="AliceBlue"
             ItemTemplate="{StaticResource ProductTemplate}" />
</UserControl>

